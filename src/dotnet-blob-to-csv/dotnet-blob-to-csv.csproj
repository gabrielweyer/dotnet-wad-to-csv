<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.1;netcoreapp3.1</TargetFrameworks>
    <PackAsTool>true</PackAsTool>
    <RootNamespace>DotNet.BlobToCsv</RootNamespace>
    <AssemblyName>dotnet-blob-to-csv</AssemblyName>
    <PackageId>dotnet-blob-to-csv</PackageId>
    <Authors>Gabriel Weyer</Authors>
    <PackageDescription>Retrieve Azure Diagnostics logs from blobs and write them to a CSV file.</PackageDescription>
    <PackageTags>Azure Diagnostics;Log;blob;CSV</PackageTags>
    <PackageProjectUrl>https://github.com/gabrielweyer/dotnet-wad-to-csv</PackageProjectUrl>
    <Copyright>Copyright © Blob to CSV contributors</Copyright>
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CsvHelper" Version="12.2.2" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.4.4" />
    <PackageReference Include="WindowsAzure.Storage" Version="9.3.3" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\dotnet-ad-core\dotnet-ad-core.csproj" />
  </ItemGroup>
</Project>
